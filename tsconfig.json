{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", ".eslintrc.js"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode", ".idea"]
}
